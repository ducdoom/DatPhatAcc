<Window
    x:Class="DatPhatAcc.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatPhatAcc"
    xmlns:mainview="clr-namespace:DatPhatAcc.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:DatPhatAcc.ViewModels"
    Title="Thành Công - Misa"
    Width="1366"
    Height="768"
    d:DataContext="{d:DesignInstance Type={x:Type viewmodels:MainViewModel}}"
    Background="{StaticResource BackgroundColor}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">


    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Hệ thống">
                <MenuItem Command="{Binding RestartAppCommand}" Header="Khởi động lại" />
                <MenuItem Command="{Binding ExitAppCommand}" Header="Thoát" />
            </MenuItem>

            <MenuItem Header="Hàng hóa">
                <MenuItem Command="{Binding NavigateToSyncPurchaseViewCommand}" Header="Nhập hàng" />
                <MenuItem Header="Xuất hàng" />
            </MenuItem>

            <MenuItem Command="{Binding NavigateToSettingCommand}" Header="Hóa đơn" />
        </Menu>

        <ContentPresenter Grid.Column="1" Content="{Binding NavigationService.CurrentView}" />
    </DockPanel>
</Window>
