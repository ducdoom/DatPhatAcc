<Window x:Class="DatPhatAcc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatPhatAcc"
        mc:Ignorable="d"
        xmlns:mainview="clr-namespace:DatPhatAcc.Views" 
        xmlns:viewmodels="clr-namespace:DatPhatAcc.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Content="Home" Command="{Binding NavigateToHomeCommand}"></Button>
            <Button Content="Settings" Command="{Binding NavigateToSettingCommand}"></Button>
        </StackPanel>

        <ContentPresenter Grid.Column="1" Content="{Binding NavigationService.CurrentView}">
            
        </ContentPresenter>
    </Grid>
</Window>
