<Page
    x:Class="DatPhatAcc2.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DatPhatAcc2.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:DatPhatAcc2.ViewModels"
    Title="ShellPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:ShellViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Command="" Header="Hệ thống" />
            <MenuItem Command="{Binding NavigateToReportInventorySummaryPageCommand}" Header="Báo cáo" />
        </Menu>
    </Grid>
</Page>
